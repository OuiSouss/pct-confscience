<!DOCTYPE html>
<html>
{# app/Resources/views/security/login.html.twig #}
{# ... you will probably extend your base template, like base.html.twig #}

{% if error %}
    <div class="registration background-color-white box-shadow">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<head>
    <meta charset="UTF-8" />
    {% block stylesheets %}
      <link type="text/css" rel="stylesheet" href="{{ asset('bundles/science-infuse/css/general.css') }}"/>
      <link type="text/css" rel="stylesheet" href="{{ asset('bundles/science-infuse/css/header.css') }}"/>
      <link type="text/css" rel="stylesheet" href="{{ asset('bundles/science-infuse/css/page.css') }}"/>
      <link type="text/css" rel="stylesheet" href="{{ asset('bundles/science-infuse/css/form.css') }}"/>
    {% endblock %}
    <title> Science infuse </title>
</head>
  <body>
    {% include 'header.html.twig' %}
    <div class="login padding-large background-color-white box-shadow">
        <form action="{{ path('login') }}" method="post">
            <label for="username">Username:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />

            <label for="password">Password:</label>
            <input type="password" id="password" name="_password" />

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <button type="submit">login</button>
        </form>
      </div>
    </body>
</html>
